        like a button, just like the 3 items below  -->
        <menu>
            <item
                android:title="All Mails"
                android:id="@+id/all_mails_id"
                android:icon="@drawable/all_mails"/>
            <item
                android:title="Trash"
                android:id="@+id/trash_id"
                android:icon="@drawable/trash"/>
            <item
                android:title="Spam"
                android:id="@+id/spam_id"
                android:icon="@drawable/spam"/>
        </menu>
