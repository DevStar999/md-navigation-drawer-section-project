<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Changing parent theme to remove default top toolbar -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <!-- The following item indicates the our activity will not have the default android toolbar -->
        <item name="android:windowActionBar">false</item>
        <!-- The following item indicates the our activity's toolbar will not have any label -->
        <item name="android:windowNoTitle">true</item>
        <!-- The following item indicates the our activity will have the status bar's background -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- The following item indicates that our activity's status bar will have transparent color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>